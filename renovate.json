{
  "extends": [
    "config:base"
  ],
  "baseBranches": ["v2018"],
  "timezone": "Asia/Tokyo",
  "node": {
    "supportPolicy": ["lts_latest"]
  },
  "npm": {
    "separateMinorPatch": true,
    "unpublishSafe": true,
    "packageRules": [
      {
        "updateTypes": [
          "minor",
          "patch"
        ],
        "excludePackageNames": ["typescript"],
        "minor": {
          "groupName": "all NPM minor dependencies",
          "groupSlug": "all-npm-minor"
        },
        "patch": {
          "groupName": "all NPM patch dependencies",
          "groupSlug": "all-npm-patch"
        },
        "automerge": true
      },
      {
        "packageNames": ["typescript"],
        "automerge": false
      }
    ]
  }
}
